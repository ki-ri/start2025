# AWS設定
aws_region  = "ap-northeast-1"
aws_profile = "study"

# ECRリポジトリ設定
repository_name      = "potato-app"
image_tag_mutability = "MUTABLE"  # または "IMMUTABLE"
scan_on_push         = true
encryption_type      = "AES256"

# ライフサイクルポリシー設定
max_image_count = 30  # 保持する最大イメージ数
untagged_days   = 7   # タグなしイメージの保持日数

# タグ設定
common_tags = {
  Project     = "potato-app"
  Environment = "production"
  ManagedBy   = "Terraform"
  Owner       = "your-team-name"
}
